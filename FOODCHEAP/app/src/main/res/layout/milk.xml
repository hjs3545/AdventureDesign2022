<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="10dp">
        <ImageButton
                android:background="@color/white"
                android:layout_width="80dp"
                android:layout_height="80dp" app:srcCompat="@drawable/backbutton" android:id="@+id/buttonback"
                tools:ignore="SpeakableTextPresentCheck"/>
        <TextView
                android:text="쿠키네 식료품"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                android:textSize="16sp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"/>
        <ImageButton
                android:background="@color/white"
                android:layout_width="80dp"
                android:layout_height="80dp" app:srcCompat="@drawable/heart" android:id="@+id/heart"
                android:layout_marginLeft="70dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp"
                tools:ignore="SpeakableTextPresentCheck"/>
    </LinearLayout>
    <ImageView
            android:src="@drawable/milk_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/imageView5"
            android:layout_gravity="center_horizontal" android:layout_marginTop="40dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="69dp">
        <TextView
                android:text="3,200원 >"
                android:layout_width="wrap_content"
                android:textColor="#897E7E"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:textSize="16sp"
                android:textStyle="bold" android:layout_marginTop="40dp"
                android:layout_marginLeft="140dp" android:layout_marginRight="5dp"/>
        <TextView
                android:text="2,200원"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content" android:id="@+id/textView8" android:textSize="16sp"
                android:textStyle="bold" android:layout_marginRight="50dp" android:layout_marginTop="40dp"/>
    </LinearLayout>
    <TextView
            android:text="-31%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginRight="10dp" android:layout_marginLeft="190dp" android:layout_marginTop="5dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="서울우유 1.8L"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp" android:textSize="20sp"
                android:textStyle="bold" android:layout_marginBottom="20dp"/>
        <ImageView
                android:src="@drawable/time"
                android:layout_width="20dp"
                android:layout_height="20dp" android:id="@+id/imageView7" android:layout_marginTop="25dp"
                android:layout_marginLeft="155dp"/>
        <TextView
                android:text="~11/10"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="체세포수 1등급, 세균수 1A "
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_marginLeft="30dp"/>
        <TextView
                android:text="재고 10개"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView13"
                android:layout_marginLeft="125dp" android:textSize="16sp" android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="30dp">
        <ImageButton
                android:src="@drawable/add"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Buttoncart" android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp" tools:ignore="SpeakableTextPresentCheck"/>
        <ImageButton
                android:src="@drawable/buy"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Buttonbuy" android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp" tools:ignore="SpeakableTextPresentCheck"/>
    </LinearLayout>
</LinearLayout>