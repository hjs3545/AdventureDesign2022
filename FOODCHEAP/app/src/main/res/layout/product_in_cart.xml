<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:background="@color/white"
                                                   android:layout_height="100dp">

    <Button
            android:layout_width="18dp"
            android:layout_height="18dp" android:id="@+id/delete_button"
            android:background="@drawable/delete"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"/>
    <ImageView android:layout_width="75dp" android:layout_height="75dp"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
               android:id="@+id/productInCartImageView" app:layout_constraintHorizontal_bias="0.179"
               app:layout_constraintVertical_bias="0.52"/>
    <TextView
            android:text="Product Name"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content" android:id="@+id/CartName"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.551" app:layout_constraintVertical_bias="0.219"/>
    <TextView
            android:text="Product Price"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content" android:id="@+id/CartPrice"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.551" app:layout_constraintVertical_bias="0.8"/>
    <Button
            android:text="-"
            android:textColor="@color/연두색"
            android:textSize="20dp"
            android:background="@drawable/left_button_shape"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="20dp"
            android:layout_height="35dp" android:id="@+id/button8"
            app:layout_constraintHorizontal_bias="0.804" app:layout_constraintVertical_bias="0.507"/>
    <Button
            android:text="+"
            android:textColor="@color/연두색"
            android:textSize="13dp"
            android:background="@drawable/right_button_shape"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="20dp"
            android:layout_height="35dp" android:id="@+id/button9"
            app:layout_constraintHorizontal_bias="0.93" app:layout_constraintVertical_bias="0.507"/>
    <TextView
            android:text="1"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView36"
            app:layout_constraintHorizontal_bias="0.857"/>
</androidx.constraintlayout.widget.ConstraintLayout>