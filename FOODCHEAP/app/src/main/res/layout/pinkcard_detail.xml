<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_marginTop = "7dp"
                                                   android:layout_marginBottom = "7dp"
                                                   android:background="@drawable/pink_card"
                                                   android:layout_width="340dp"
                                                   android:layout_height="220dp">

    <TextView
            android:text="FOODCHEAP"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView67"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.091" app:layout_constraintVertical_bias="0.284"/>
    <TextView
            android:text="0000 0000 0000 0000"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pinkcardNumber"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125" app:layout_constraintVertical_bias="0.9"/>
    <TextView
            android:text="VALID THRU"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView68"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.895" app:layout_constraintVertical_bias="0.599"/>
    <TextView
            android:text="MM/YY"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pinkcardValid"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.905" app:layout_constraintVertical_bias="0.712"/>
</androidx.constraintlayout.widget.ConstraintLayout>