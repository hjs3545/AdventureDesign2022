<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:background="@color/white"
        android:layout_width="175dp"
        android:layout_height="250dp">

    <ImageView android:layout_width="150dp" android:layout_height="150dp"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
               android:id="@+id/user_product_image" app:layout_constraintHorizontal_bias="0.48"
               app:layout_constraintVertical_bias="0.106"/>
    <TextView
            android:text="Product Name"
            android:textSize="13dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="110dp"
            android:layout_height="wrap_content" android:id="@+id/user_product_name"
            app:layout_constraintHorizontal_bias="0.184" app:layout_constraintVertical_bias="0.728"/>
    <TextView
            android:text="DR"
            android:textSize="13dp"
            android:textColor="#FFFF0000"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:layout_height="wrap_content" android:id="@+id/user_product_discountrate"
            app:layout_constraintHorizontal_bias="0.913" app:layout_constraintVertical_bias="0.73"/>
    <TextView
            android:text="Price1"
            android:textSize="13dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="50dp"
            android:layout_height="wrap_content" android:id="@+id/user_product_price1"
            app:layout_constraintHorizontal_bias="0.096" app:layout_constraintVertical_bias="0.92"/>
    <TextView
            android:text="Price2"
            android:textSize="13dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="50dp"
            android:layout_height="wrap_content" android:id="@+id/user_product_price2"
            app:layout_constraintHorizontal_bias="0.656" app:layout_constraintVertical_bias="0.92"/>
    <TextView
            android:text=">"
            android:textSize="13dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView60"
            app:layout_constraintHorizontal_bias="0.38" app:layout_constraintVertical_bias="0.92"/>
    <TextView
            android:text="Date"
            android:textSize="9dp"
            android:textColor="@color/연두색1"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="60dp"
            android:layout_height="wrap_content" android:id="@+id/user_product_date"
            app:layout_constraintHorizontal_bias="0.626" app:layout_constraintVertical_bias="0.81"/>
    <TextView
            android:text="유통기한 임박"
            android:textSize="9dp"
            android:textColor="@color/연두색1"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView56"
            app:layout_constraintHorizontal_bias="0.097" app:layout_constraintVertical_bias="0.81"/>
</androidx.constraintlayout.widget.ConstraintLayout>