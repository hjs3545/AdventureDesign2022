<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
>

    <Button
            android:background="@drawable/final_back_button"
            android:drawableLeft="@drawable/back_button"
            android:paddingLeft="11dp"
            android:layout_width="30dp"
            android:layout_height="30dp" android:id="@+id/backButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.068" app:layout_constraintVertical_bias="0.053"/>

    <Button
            android:background="@drawable/final_back_button"
            android:drawableLeft="@drawable/emptyheart"
            android:paddingLeft="9dp"
            android:layout_width="30dp"
            android:layout_height="30dp" android:id="@+id/heartButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.931" app:layout_constraintVertical_bias="0.052"/>
    <TextView
            android:text="Shop Name"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewShopName"
            app:layout_constraintVertical_bias="0.058"/>

    <ImageView android:layout_width="270dp" android:layout_height="270dp"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
               android:id="@+id/productImageView" app:layout_constraintHorizontal_bias="0.495"
               app:layout_constraintVertical_bias="0.227"/>
    <TextView
            android:text="Price2"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewProductPrice2"
            app:layout_constraintVertical_bias="0.52" app:layout_constraintHorizontal_bias="0.641"/>
    <TextView
            android:text=">"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/arrow"
            app:layout_constraintVertical_bias="0.52"/>
    <TextView
            android:text="Price1"
            android:textColor="#80000000"
            android:textStyle="bold"
            android:textSize="22dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewProductPrice1"
            app:layout_constraintVertical_bias="0.52" app:layout_constraintHorizontal_bias="0.355"/>
    <TextView
            android:text="Product Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewProductName"
            app:layout_constraintVertical_bias="0.687" app:layout_constraintHorizontal_bias="0.1"/>
    <TextView
            android:text="Product Explain"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="224dp"
            android:layout_height="127dp" android:id="@+id/textViewProductExplain"
            app:layout_constraintVertical_bias="0.843" app:layout_constraintHorizontal_bias="0.147"/>
    <TextView
            android:text="Discount Rate"
            android:textColor="#FFFF0000"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewDiscountRate"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.566"/>
    <Button
            android:background="@drawable/buy"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="141dp"
            android:layout_height="47dp" android:id="@+id/buyButton"
            app:layout_constraintHorizontal_bias="0.896" app:layout_constraintVertical_bias="0.955"/>
    <Button
            android:background="@drawable/add"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="141dp"
            android:layout_height="47dp" android:id="@+id/addButton"
            app:layout_constraintHorizontal_bias="0.112" app:layout_constraintVertical_bias="0.955"/>
    <ImageView
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/time" android:id="@+id/imageView9"
            app:layout_constraintHorizontal_bias="0.755" app:layout_constraintVertical_bias="0.692"/>
    <TextView
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="13dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="62dp"
            android:layout_height="17dp" android:id="@+id/textViewDate"
            app:layout_constraintHorizontal_bias="0.935" app:layout_constraintVertical_bias="0.692"/>
    <TextView
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:text="재고"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView38"
            app:layout_constraintHorizontal_bias="0.8" app:layout_constraintVertical_bias="0.731"/>
    <TextView
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:text="개"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView39"
            app:layout_constraintHorizontal_bias="0.92" app:layout_constraintVertical_bias="0.731"/>
    <TextView
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:text="N"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_width="21dp"
            android:layout_height="wrap_content" android:id="@+id/textViewNumber"
            app:layout_constraintHorizontal_bias="0.875" app:layout_constraintVertical_bias="0.731"/>
</androidx.constraintlayout.widget.ConstraintLayout>